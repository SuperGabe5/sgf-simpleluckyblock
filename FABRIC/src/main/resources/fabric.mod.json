{
	"schemaVersion": 1,
	"id": "simple_lucky_block",
	"version": "${version}",
	"name": "Simple Lucky Block",
	"description": "Adds a simple Lucky Block to Minecraft. Break it to get a reward or a punishment.",
	"authors": [
		"Simple Lucky Block Dev"
	],
	"contact": {
		"homepage": "www.github.com/af-an/simpleluckyblock",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "CC0-1.0",
	"icon": "assets/simple_lucky_block/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.simpleluckyblock.SimpleLuckyBlock"
		],
		"client": [
			"com.simpleluckyblock.SimpleLuckyBlockClient"
		],
		"fabric-datagen": [
			"com.simpleluckyblock.SimpleLuckyBlockDataGenerator"
		]
	},
	"mixins": [
		"simple-lucky-block.mixins.json",
		{
			"config": "simple-lucky-block.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.14",
		"minecraft": "~1.21.5",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}